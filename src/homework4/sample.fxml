<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="300.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="homework4.Controller">
    <Pane prefHeight="70.0" prefWidth="350.0" style="-fx-background-color: #1E88E5;">
        <children>
            <Label layoutX="6.0" layoutY="17.0" text="Username" textFill="#faf9f9">
                <font>
                    <Font name="System Bold" size="13.0" />
                </font></Label>
            <Label layoutX="6.0" layoutY="35.0" text="Status" textFill="#faf9f9" />
        </children></Pane>
    <Pane layoutY="70.0" prefHeight="180.0" prefWidth="350.0" />
    <TextArea fx:id="chat" editable="false" layoutY="70.0" prefHeight="179.0" prefWidth="349.0" />
    <Pane layoutY="242.0" prefHeight="56.0" prefWidth="350.0">
        <children>
            <TextField fx:id="message" layoutY="7.0" onAction="#sendMsg" prefHeight="50.0" prefWidth="257.0" promptText="Введите сообщение..." />
            <Button fx:id="sendButton" layoutX="257.0" layoutY="7.0" mnemonicParsing="false" onAction="#sendMsg" prefHeight="50.0" prefWidth="92.0" text="Send" />
        </children></Pane>
</AnchorPane>
